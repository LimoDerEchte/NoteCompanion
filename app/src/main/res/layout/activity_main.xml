<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="400sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/title"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/icon"
                android:background="@drawable/layout_rounded"
                android:contentDescription="@string/appIconDesc"/>

        <TextView
                android:layout_marginTop="25sp"
                android:layout_marginEnd="70sp"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/icon"
                android:id="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_marginTop="25sp"
                android:layout_marginStart="10sp"
                android:text="@string/version"
                android:textSize="15sp"
                android:textColor="@color/neutral60"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/icon"
                android:id="@+id/version"/>

        <Button
                android:text="@string/latex_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:backgroundTint="@color/neutral90"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:id="@+id/latex_button"/>
        <Button
                android:text="@string/reaction_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/neutral90"
                app:layout_constraintTop_toBottomOf="@id/latex_button"
                android:id="@+id/chemics_button"/>

        <ImageView
                android:id="@+id/githubButton"
                android:src="@drawable/github_icon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="25sp"
                app:tint="@color/neutral90"
                app:layout_constraintTop_toBottomOf="@id/chemics_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/webButton"
                android:contentDescription="@string/appIconDesc"/>
        <ImageView
                android:id="@+id/webButton"
                android:src="@drawable/web_icon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="25sp"
                app:tint="@color/neutral90"
                app:layout_constraintTop_toBottomOf="@id/chemics_button"
                app:layout_constraintStart_toEndOf="@id/githubButton"
                app:layout_constraintEnd_toStartOf="@+id/youtubeButton"
                android:contentDescription="@string/appIconDesc"/>
        <ImageView
                android:id="@+id/youtubeButton"
                android:src="@drawable/youtube_icon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="25sp"
                app:tint="@color/neutral90"
                app:layout_constraintTop_toBottomOf="@id/chemics_button"
                app:layout_constraintStart_toEndOf="@id/webButton"
                app:layout_constraintEnd_toStartOf="@+id/discordButton"
                android:contentDescription="@string/appIconDesc"/>
        <ImageView
                android:id="@+id/discordButton"
                android:src="@drawable/discord_icon"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="25sp"
                app:tint="@color/neutral90"
                app:layout_constraintTop_toBottomOf="@id/chemics_button"
                app:layout_constraintStart_toEndOf="@id/youtubeButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/appIconDesc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/settingsButton"
            android:src="@drawable/settings_icon"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_margin="15sp"
            app:tint="@color/neutral90"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/settings"/>

    <TextView
            android:layout_margin="10sp"
            android:text="@string/copyright"
            android:textColor="@color/neutral50"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>