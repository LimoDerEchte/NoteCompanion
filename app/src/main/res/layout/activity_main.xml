<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/title"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/icon"
                android:background="@drawable/layout_rounded"
                android:contentDescription="@string/appIconDesc"/>
        <TextView
                android:layout_marginTop="25sp"
                android:layout_marginEnd="70sp"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/icon"
                android:id="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_marginTop="25sp"
                android:layout_marginStart="10sp"
                android:text="@string/version"
                android:textColor="@color/material_dynamic_neutral50"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/icon"
                android:id="@+id/version"/>
        <Button
                android:text="@string/latex_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:id="@+id/latex_button"/>
        <Button
                android:text="@string/reaction_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/latex_button"
                android:id="@+id/chemics_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:layout_margin="10sp"
            android:text="@string/copyright"
            android:textColor="@color/material_dynamic_neutral50"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/copyright"/>

</androidx.constraintlayout.widget.ConstraintLayout>